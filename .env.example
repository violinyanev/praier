# Environment variables for Praier
# Copy this file to .env and fill in your values

# GitHub token for the default (public) GitHub instance
GITHUB_TOKEN=your_github_token_here

# Additional GitHub servers (optional)
# PRAIER_SERVER_COUNT=2
# GITHUB_1_NAME=enterprise
# GITHUB_1_URL=https://github.company.com/api/v3
# GITHUB_1_TOKEN=your_enterprise_token_here

# Monitoring configuration
PRAIER_POLL_INTERVAL=60
PRAIER_MAX_CONCURRENT=10
PRAIER_REPOSITORIES=owner/repo1,owner/repo2
PRAIER_AUTO_APPROVE=true
PRAIER_AUTO_FIX=true

# Logging
PRAIER_LOG_LEVEL=INFO